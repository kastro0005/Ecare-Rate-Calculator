# ECARE Rate Calculator - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application debug mode (True/False)
APP_DEBUG=False

# Application environment (development/production/testing)
APP_ENV=production

# Application name
APP_NAME="ECARE Rate Calculator"

# Application version
APP_VERSION=1.0.2

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional, if you want to log to file)
# LOG_FILE=logs/app.log

# Enable console logging (True/False)
LOG_CONSOLE=True

# =============================================================================
# GEOLOCATION AND MAPPING SERVICES
# =============================================================================

# Google Maps API Key (for geocoding and distance calculation)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# MapBox API Key (alternative mapping service)
# MAPBOX_API_KEY=your_mapbox_api_key_here

# OpenStreetMap Nominatim API (free alternative)
# NOMINATIM_USER_AGENT=ecare-rate-calculator

# Geocoding service timeout (seconds)
GEOCODING_TIMEOUT=10

# Maximum retries for geocoding requests
GEOCODING_MAX_RETRIES=3

# =============================================================================
# RATE CALCULATION SETTINGS
# =============================================================================

# Default provider (Baptist/HCA/Standard)
DEFAULT_PROVIDER=Standard

# Road distance factor (multiplier for straight-line distance)
ROAD_DISTANCE_FACTOR=1.3

# Currency symbol
CURRENCY_SYMBOL=$

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Default window width
WINDOW_WIDTH=800

# Default window height
WINDOW_HEIGHT=600

# Application theme (light/dark)
APP_THEME=light

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# HTTP request timeout (seconds)
HTTP_TIMEOUT=30

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# User agent for HTTP requests
USER_AGENT="ECARE Rate Calculator v1.0.2"

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Enable caching for geocoding results (True/False)
ENABLE_GEOCODING_CACHE=True

# Cache expiration time (seconds)
CACHE_EXPIRATION=3600

# Cache directory
CACHE_DIR=cache

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable SSL verification for HTTPS requests (True/False)
SSL_VERIFY=True

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# =============================================================================
# DATABASE CONFIGURATION (if needed in future)
# =============================================================================

# Database URL (SQLite example)
# DATABASE_URL=sqlite:///ecare_calculator.db

# Database connection pool size
# DB_POOL_SIZE=5

# =============================================================================
# BACKUP AND EXPORT SETTINGS
# =============================================================================

# Default export format (PDF/CSV/JSON)
DEFAULT_EXPORT_FORMAT=PDF

# Export directory
EXPORT_DIR=exports

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable hot reload in development (True/False)
HOT_RELOAD=False

# Enable performance monitoring (True/False)
PERFORMANCE_MONITORING=False

# =============================================================================
# PROVIDER SPECIFIC SETTINGS
# =============================================================================

# Baptist Health specific settings
BAPTIST_CONTACT_INFO="Baptist Health Transport Services"
BAPTIST_PHONE="+1-XXX-XXX-XXXX"

# HCA specific settings
HCA_CONTACT_INFO="HCA Healthcare Transport"
HCA_PHONE="+1-XXX-XXX-XXXX"

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Enable desktop notifications (True/False)
ENABLE_NOTIFICATIONS=True

# Email notifications (if implemented)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=notifications@yourcompany.com

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Third-party integrations
# BILLING_SYSTEM_API_URL=https://api.billing-system.com
# BILLING_SYSTEM_API_KEY=your_billing_api_key

# EHR (Electronic Health Records) integration
# EHR_API_URL=https://api.ehr-system.com
# EHR_API_KEY=your_ehr_api_key

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit the actual .env file to version control
# 2. Keep sensitive information like API keys secure
# 3. Use strong, unique API keys for production
# 4. Regularly rotate API keys and passwords
# 5. Consider using environment-specific .env files (.env.development, .env.production)
#